#!/bin/sh

# the file where the commit message is written
filepath="$1"
tmp_file=$(mktemp /tmp/emoji-commitzen.XXXX)

replacements=(
    's/^new/âœ¨ Feat:/'
    's/^add/âœ¨ Feat:/'
    's/^feat/âœ¨ Feat:/'
    's/^fix/ðŸ› Fix:/'
    's/^doc/ðŸ“š Doc:/'
    's/^style/ðŸŽ¨ Style:/'
    's/^compile/ðŸŽ¨ Style:/'
    's/^recompile/ðŸŽ¨ Style:/'
    's/^refacto/ðŸ”¨ Refacto:/'
    's/^update/ðŸ”¨ Refacto:/'
    's/^perf/ðŸš€ Perf:/'
    's/^chore/ðŸ”§ Chore:/'
    's/^config/ðŸ”§ Config:/'
    's/^lint/ðŸ’„ Lint:/'
    's/^test/ðŸ¤– Test:/'
    's/^release/ðŸ“¦ Release:/'
    's/^first/ðŸ£ First:/'
    's/^remove/âŒ Delete:/'
    's/^delete/âŒ Delete:/'
    's/^move/ðŸ” Move:/'
)

# join replacements by ; to have sed perform multiple replace
sed_command=$(printf "%s;" "${replacements[@]}")

# perform replacements in temp file
cat $filepath | sed "$sed_command" > $tmp_file

# replace commit file
mv $tmp_file $filepath
