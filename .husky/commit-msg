#!/bin/sh

# the file where the commit message is written
filepath="$1"
tmp_file=$(mktemp /tmp/emoji-commitzen.XXXX)

replacements=(
    's/^new/✨ Feat:/'
    's/^add/✨ Feat: add/'
    's/^feat/✨ Feat:/'
    's/^fix/🐛 Fix:/'
    's/^doc/📚 Doc:/'
    's/^style/🎨 Style:/'
    's/^compile/🎨 Style:/'
    's/^recompile/🎨 Style:/'
    's/^format/🔨 Refact:/'
    's/^refacto/🔨 Refact:/'
    's/^update/🔨 Refact:/'
    's/^perf/🚀 Perf:/'
    's/^chore/🔧 Chore:/'
    's/^config/🔧 Conf:/'
    's/^lint/💄 Lint:/'
    's/^test/🤖 Test:/'
    's/^release/📦 Release:/'
    's/^first/🐣 First:/'
    's/^remove/❌ Del:/'
    's/^delete/❌ Del:/'
    's/^move/🔁 Move:/'
)

# join replacements by ; to have sed perform multiple replace
sed_command=$(printf "%s;" "${replacements[@]}")

# perform replacements in temp file
cat $filepath | sed "$sed_command" > $tmp_file

# replace commit file
mv $tmp_file $filepath
